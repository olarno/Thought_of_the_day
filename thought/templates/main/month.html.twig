{% extends 'base.html.twig' %}

{% block title %}Feels this month{% endblock %}

{% block body %}
{% dump(thoughts) %}

	<h1>This month</h1>


	<div class="container">
		<div class="row">
			{% for thought in thoughts %}
				<div class="col-6">
					<div class="card text-center mt-2">
						<div class="card-header">
							<a href="{{ path('thought_read', {'id': thought.id}) }}">
								{{ thought.title }}</a>
						</div>
						<div class="card-body">
							<p class="card-text">{{ thought.content }}</p>
						</div>
						<div class="card-footer text-muted">
							<div class="row">
								<div class="col-4">
									<span class="badge" style="background-color: {{thought.colors.color}};" ><a href="{{ path('colorFeel_read', {'id': thought.colors.id}) }}">{{ thought.colors.feel }}</a></span>
								</div>
								<div class="col-8">
									<p class="text-muted">{{thought.createdAt|date ("j F Ã  H:m") }}</p>
								</div>
							</div>
						</div>
					</div>
				</div>
			{% endfor %}
		</div>
	</div>


{% endblock %}
